<details id="emoji-selector">
  <summary>
    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 100 100">
      <!-- Face -->
      <circle cx="50" cy="50" r="45" fill="#ffffff" stroke="#3B3C3C" stroke-width="2"/>

      <!-- Left eye -->
      <circle cx="35" cy="40" r="5" fill="#3B3C3C"/>

      <!-- Right eye -->
      <circle cx="65" cy="40" r="5" fill="#3B3C3C"/>

      <!-- Mouth -->
      <path d="M30 60 Q50 80 70 60" fill="none" stroke="#3B3C3C" stroke-width="3"/>
    </svg>
  </summary>

  <div>
    <%= form_with model: rich_text_reaction do |form| %>
      <%= form.hidden_field :rich_text_id, value: rich_text_reaction.rich_text_id %>

      <% RichTextReaction.emojis.keys.each do |emoji| %>
        <%= form.button :emoji, value: emoji do %>
          <%= emoji %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</details>
