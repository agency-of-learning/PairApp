<% if current_user.admin? && @mentee_application.current_state.can_promote? %>
  <div class="join join-horizontal">
    <%= button_to 'Promote to next stage', user_mentee_application_promotions_path(@mentee_application),
        method: :post,
        form_class: 'join-item btn btn-primary capitalize' %>

    <%= button_to 'Reject', user_mentee_application_rejections_path(@mentee_application),
        method: :post,
        form_class: 'join-item btn btn-error capitalize' %>
  </div>
<% end %>