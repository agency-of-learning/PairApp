<%= form_with(model: standup_meeting_group) do |form| %>
  <div class="flex flex-col justify-between md:flex-row">
    <div class="flex flex-col md:flex-row gap-y-2 md:space-x-4">
      <div class="flex gap-x-2">
        <%= form.label :name, class: "label label-text" %>
        <%= form.text_field :name, class: "input input-bordered w-full" %>
      </div>

      <div class="flex gap-x-2">
        <%= form.label :frequency, class: "label label-text" %>
        <%= form.select :frequency, 
            options_for_select(
              StandupMeetingGroup.frequencies.map { |k, v| [k.humanize, k] }, 
              standup_meeting_group.frequency,
            ), 
            {},
            class: "select select-bordered" %>
      </div>

      <div class="flex gap-x-2">
        <%= form.label :start_time, class: "label label-text" %>
        <%= form.time_field :start_time, class: 'input input-bordered w-full' %>
      </div>
    </div>

    <div>
      <div class="form-control">
        <%= form.submit "Create", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
