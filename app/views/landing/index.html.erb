<div class="bg-[#363942] lg:w-3/4   mx-auto rounded-lg text-white">
  <%= render_navbar %>

  <!-- Hero Section -->
  <div class="flex flex-col text-white p-5">
    <div class="flex justify-center w-full mb-5">
      <%= image_tag "aol_logo", width:"104px" %>
    </div> 
    <div class="flex justify-center w-full ">
      <div class="text-4xl mb-5 justify-self-center font-bold">The Agency of Learning</div>
    </div>
    <div class="flex justify-center w-full ">
      <p class=" mb-5 justify-self-center text-[rgba(255,255,255,0.678)]">Join our private community of highly motivated early career developers.</p>
    </div>
    <!-- CTA's -->
    <div class="flex-col w-full my-5 sm:pl-8">
      <div class="sm:w-1/2 sm:pl-8 mb-4">
        <button class="flex justify-between items-center w-full h-[60px] mb-2 bg-[#38D68E] text-[#363942] font-bold px-4 rounded-lg hover:scale-105 transform transition-transform">
            Become a Member
