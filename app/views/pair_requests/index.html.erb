<%= link_to "New pair request", new_pair_request_path %>

<h1 class="text-2xl font-bold mb-4 text-center">My Requests</h1>

<div class="p-2">
  <div class="table w-full border-2 border-black text-xs sm:text-sm md:text-base">
    <div class="table-header-group">
      <div class="table-row font-bold bg-neutral-400">
        <div class="table-cell text-left border-r-2 border-black p-1">Partner</div>
        <div class="table-cell text-left border-r-2 border-black p-1">When</div>
        <div class="table-cell text-left border-r-2 border-black p-1">Status</div>
        <div class="table-cell text-left p-1">Actions</div>
      </div>
    </div>
    <div class="table-row-group">
      <% @pair_requests.each do |pair_request| %>
        <div class="table-row odd:bg-white even:bg-neutral-100">
          <div class="table-cell text-left border-r-2 border-black p-2 ">Daniel<br>Rassiner</div>
          <div class="table-cell text-left border-r-2 border-black p-2"><%= format_request_date(pair_request) %></div>
          <div class="table-cell text-left border-r-2 border-black p-2"><%= pair_request.status.capitalize %></div>
          <div class="table-cell text-left p-2">Lorem<br>Ipsum</div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<br>
<br>
<br>
<div class="table">
  <div class="row header">
    <div class="cell py-3">Partner</div>
    <div class="cell">When</div>
    <div class="cell">Status</div>
    <div class="cell">Action</div>
  </div>

  <% @pair_requests.each do |pair_request| %>
    <div class="row">
      <div class="cell py-3"><%= pair_request.partner_for(current_user).email %></div>
      <div class="cell"><%= format_request_date(pair_request) %></div>
      <div class="cell"><%= pair_request.status.capitalize %></div>
      <div class="cell">Lorem Ipsum</div>
    </div>
  <% end %>
</div>

