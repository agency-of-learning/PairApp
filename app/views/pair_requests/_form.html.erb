<%= turbo_frame_tag "new_request_form" do %>
  <%= form_with(model: pair_request, class: 'p-4 mx-auto border-2 border-primary rounded-md flex flex-col') do |form| %>
    <div id="form-container" class='flex flex-col space-y-4 xl:space-y-0 xl:max-w-full xl:inline-flex xl:justify-around xl:space-x-4 xl:flex-row object-contain' data-controller="pair-requests-form">  
      <div class="flex justify-between space-x-4 align-middle items-center ">
         <%= form.label :invitee_id, class: "label label-text" %>
         <%= form.select :invitee_id, options_for_select(User.excluding(current_user).map{|invitee| [invitee.full_name, invitee.id, {"data-timezone" => invitee.time_zone}]}), {:include_blank => "Please select"}, { class: 'select select-primary', data: {action: "change->pair-requests-form#click"}} %>
      </div>
      <div class="flex flex-col">
       <div class="flex space-x-4 align-middle items-center w-max">
          <%= form.label :when, class: " label label-text pr-2.5" %>
          <p class="label label-text "><%= "(#{current_user.time_zone})" %></p>
          <%= form.datetime_field :when, required: true, data: {action: "input->pair-requests-form#date"}, class: "input input-primary input-md w-max", data: {action: "input->pair-requests-form#date"} %>
        </div>
        <div class="flex space-x-4 align-middle items-center text-left">
         <p class="text-left  label label-text">Invitee</p>
         <p data-pair-requests-form-target="invitee_tz" class=" text-left whitespace-nowrap  label label-text"></p>
         <strong class="pl-4 label-text" id="invitee" data-value="" data-pair-requests-form-target="invitee"></strong>
        </div>
      </div>

      <div class="flex justify-between space-x-4 align-middle items-center">
        <%= form.label :duration, 'Duration (minutes)', class: "label label-text"  %>
        <%= form.number_field :duration, value: 15, in: 15..180, step: 15, required: true, class: 'input input-primary input-md w-36' %>
      </div>

      <div class='ml-auto flex items-center'>
        <%= form.submit "Create Pair Request", class: 'btn btn-primary w' %>
      </div>
    </div>
  <% end %>
<% end %>

