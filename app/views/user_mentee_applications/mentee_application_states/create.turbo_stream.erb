<%= turbo_stream.update 'flash', partial: "layouts/flash" %>

<%= turbo_stream.update "#{dom_id(@user_mentee_application)}--status" do %>
  <%= @user_mentee_application.status.humanize %>
<% end %>

<%= turbo_stream.update "#{dom_id(@user_mentee_application)}--note" do %>
  <%= @user_mentee_application.current_state.note %>
<% end %>

<%= turbo_stream.update "#{dom_id(@user_mentee_application)}--action" do %>
  <% if @user_mentee_application.in_review? %>
    <%= link_to "Action",
      new_user_mentee_application_mentee_application_state_path(@user_mentee_application),
      class: 'link link-primary',
      data: { turbo_frame: 'modal' }
    %>
  <% end %>
<% end %>

<%= turbo_stream.update "#{dom_id(@user_mentee_application)}--manage" do %>
  <% if @user_mentee_application.in_review? %>
    <%= link_to "Manage Application",
      new_user_mentee_application_mentee_application_state_path(@user_mentee_application),
      class: 'link link-primary',
      data: { turbo_frame: 'modal' }
    %>
  <% end %>
<% end %>
