<div class="py-2 px-4 border shadow-lg rounded-md flex flex-col gap-2">
  <% if user_signed_in? %>
    <%= link_to blog_post.user.full_name, blog_post.user.profile, class: 'link link-secondary' %>
  <% else %>
    <p><%= blog_post.user.full_name %></p>
  <% end %>

  <h2 class="text-2xl font-bold">
    <%= link_to blog_post.title, blog_post, class: "link hover:no-underline block" %>
  </h2>
  <p class="text-right">
    <%= time_ago_in_words(blog_post.created_at) %> ago
  </p>
</div>
