<h1 class="text-2xl font-bold mb-4 text-center">
  <%= @cohort.name %> Cohort Applications
</h1>

<div class="p-2">
  <div class="tabs">
    <%= link_to 'In Review', "#", class:"tab tab-lifted tab-active" %>
    <%= link_to 'Accepted', "#", class:"tab tab-lifted" %>
    <%= link_to 'Denied', "#", class:"tab tab-lifted" %>
  </div>
  <div class="table w-full border-2 border-base-content text-md md:text-base">
    <div class="table-header-group">
      <div class="table-row font-bold bg-primary divide-x-2 divide-base-content text-base-100">
        <%= render TableCellComponent.new(class_names: 'table-cell text-center') do %>
          Name
        <% end %>
        <%= render TableCellComponent.new(class_names: 'table-cell text-center') do %>
          Submission Date
        <% end %>
        <%= render TableCellComponent.new(class_names: 'table-cell text-center') do %>
          Notes
        <% end %>
        <%= render TableCellComponent.new(class_names: 'table-cell text-center') do %>
          Status
        <% end %>
        <%= render TableCellComponent.new(class_names: 'hidden sm:table-cell text-center') do %>
          Actions
        <% end %>
        <%= render TableCellComponent.new(class_names: 'table-cell text-center') do %>
          Last Action Date
        <% end %>
      </div>
    </div>
    <div class="table-row-group" id='my-pair-requests'>
      <% @cohort.user_mentee_applications.each do |mentee_application| %>
        <%= render "user_mentee_applications/table_row", mentee_application: %>
      <% end %>
    </div>
  </div>
</div>
